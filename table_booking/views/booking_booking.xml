<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="booking_main_menu" name="Bookings" sequence="99"
        web_icon="table_booking,static/description/icon.png"/>

    <menuitem id="booking_config_menu" name="Configuration"
              parent="booking_main_menu" groups="group_booking_manager" sequence="33"/>
    
    <record id="booking_booking_action" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.booking</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first booking!
            </p>
        </field>
    </record>

    <menuitem id="booking_booking_menu" name="Bookings" parent="booking_main_menu"
              action="booking_booking_action" sequence="22"/>

    <record id="booking_booking_calendar" model="ir.ui.view">
        <field name="name">booking.booking.calendar</field>
        <field name="model">booking.booking</field>
        <field name="arch" type="xml">
            <calendar string="Bookings" date_start="date" date_stop="end_date"
                      color="table_id" mode="week">
                <field name="display_name"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="booking_booking_tree" model="ir.ui.view">
        <field name="name">booking.booking.tree</field>
        <field name="model">booking.booking</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'confirmed'" decoration-danger="state == 'cancel'">
                <field name="partner_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="table_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="booking_booking_form" model="ir.ui.view">
        <field name="name">booking.booking.form</field>
        <field name="model">booking.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="partner_id" string="Name"/>
                        <field name="email" attrs="{'invisible': [('partner_id', '=', False)]}" required="1"/>
                        <field name="phone" attrs="{'invisible': [('partner_id', '=', False)], 'required': [('mobile', '=', False)]}"/>
                        <field name="mobile" attrs="{'invisible': [('partner_id', '=', False)], 'required': [('phone', '=', False)]}"/>
                        <field name="table_id"/>
                        <field name="date"/>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page name="lines" string="Menus">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="menu_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="booking_table_action" model="ir.actions.act_window">
        <field name="name">Tables</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.table</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first table!
            </p>
        </field>
    </record>

    <menuitem id="booking_table_menu" name="Tables" parent="booking_config_menu"
              action="booking_table_action" groups="group_booking_manager" sequence="33"/>

    <record id="booking_table_tree" model="ir.ui.view">
        <field name="name">booking.table.tree</field>
        <field name="model">booking.table</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="booking_menu_action" model="ir.actions.act_window">
        <field name="name">Menus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.menu</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first menu!
            </p>
        </field>
    </record>

    <menuitem id="booking_menu_menu" name="Menus" parent="booking_config_menu"
              action="booking_menu_action" groups="group_booking_manager" sequence="35"/>

    <record id="booking_menu_tree" model="ir.ui.view">
        <field name="name">booking.menu.tree</field>
        <field name="model">booking.menu</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="booking_menu_form" model="ir.ui.view">
        <field name="model">booking.menu</field>
        <field name="name">booking.menu.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
