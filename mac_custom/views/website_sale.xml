<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Shop">
      <xpath expr="." position="inside">
          <!--  En commentaire car ne fonctionne pas, mis de cotÃ© pour plus tard.
        <script type="text/javascript" src="/mac_custom/static/src/js/website_sale.js"/>
        -->
        <script type="text/javascript" src="/mac_custom/static/src/js/website_sale_delivery.js"/>
      </xpath>
    </template>

    <template id="payment_delivery_information" name="Delivery Information" inherit_id="website_sale_delivery.payment_delivery">
        <xpath expr="//div[@id='delivery_carrier']" position="before">
            <div t-if="deliveries" class="col-md-12 o_website_sale_rightfit" id="delivery_information">
                <h3 class="mb24">Choose your preferred delivery date</h3>
                <div class="col-xl-6" id="date_shipping_div">
                    <input type="date" id="date_shipping" name="date_shipping" t-att-value="date_shipping or order.date_shipping" />
                </div>
                <div class="panel panel-default" id="period_shipping_div">
                    <ul class="list-group">
                    <t t-set="period_nb" t-value="len(periods)" />
                    <t t-foreach="periods" t-as="period">
                        <li class="list-group-item">
                            <input t-att-value="period[0]" t-att-id="'period_%s' % period[0]" type="radio" name="period_shipping" t-att-checked="order.period_shipping == period[0] and 'checked' or False" t-att-class="'hidden' if delivery_nb == 1 else ''"/>
                            <span t-esc="period[1]"/>
                        </li>
                    </t>
                    </ul>
                </div>
                <div id="special_instruction_div"  t-attf-class="col-xl-12">
                    <label class="col-form-label" for="special_instruction">Message or special instructions</label>
                    <textarea name="special_instruction" id="special_instruction"
                              class="form-control o_input o_composer_text_field"><t t-esc="special_instruction or order.special_instruction"/></textarea>
                </div>
            </div>
        </xpath>
    </template>

    <template id="product_quantity" inherit_id="website_sale.product_quantity" name="Select Quantity">
        <xpath expr="//div[hasclass('css_quantity')]" position="after">
                <p t-if="product.uom_id.accept_decimal" class="text-muted">
                  To enter decimals,<br />
                  Click on number between the - and the +
                </p>
        </xpath>
    </template>

    <template id="product" inherit_id="website_sale.product" name="Product">
        <xpath expr="//div[@id='product_details']/p[@class='text-muted']" position="replace">
            <hr t-if="product.product_variant_id.ingredients" />
            <div class="o_not_editable">
                <h4>Ingredients</h4>
                <p t-field="product.product_variant_id.ingredients" class="text-muted" />
            </div>
            <hr/>
        </xpath>
    </template>

    <template id="product_count" inherit_id="website_product_attribute_filter.product_count" name="Product Count">
        <xpath expr="//form[hasclass('js_attributes')]/ul/t/li" position="attributes">
            <attribute name="t-if">a.show_in_website and a.value_ids and len(a.value_ids) &gt; 1</attribute>
        </xpath>
    </template>

    <template id="products_attributes" inherit_id="website_product_attribute_filter.products_attributes" name="Product Attribute's Filters Category">
        <xpath expr="//div[@class='wpf-groups']/ul/t/li" position="attributes">
            <attribute name="t-if">a.show_in_website and a.value_ids and len(a.value_ids) &gt; 1 and a.category_id and a.category_id.id==att_cate.id</attribute>
        </xpath>
    </template>

    <template id="products_filters" inherit_id="website_product_attribute_filter.products_filters" name="Applied Filters">
        <xpath expr="//form[@class='js_attributes_applied']/t/t" position="attributes">
            <attribute name="t-if">a.show_in_website and a.id in appied_filter_result.ids</attribute>
        </xpath>
    </template>

    <template id="layout_logo_show" inherit_id="website.layout_logo_show" customize_show="True" name="Show Logo">
        <xpath expr="//header//a[hasclass('navbar-brand')]" position="replace">
            <a href="/" class="navbar-brand logo">
                <span t-field="res_company.logo" t-options="{'widget': 'image'}" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" />
            </a>
            <a class="navbar-brand" href="/" t-if="website" t-field="website.name">My Website</a>
        </xpath>
    </template>

</odoo>
