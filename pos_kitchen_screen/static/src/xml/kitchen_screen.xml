<templates id="template" xml:space="preserve">
    <t t-name="pos_kitchen_screen.screen">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="btn btn-default navbar-btn" onclick="history.back()">Back</button>
                </div>
            </div>
        </nav>
        <div class="col-xs-4">
            <h3>Confirmed</h3>
            <t t-foreach="confirmed" t-as="order">
                <div class="panel panel-success">
                    <div class="panel-heading"><t t-esc="order.name"/></div>
                    <div class="panel-body">
                        <ul t-foreach="order.lines" t-as="line">
                            <li><t t-esc="line.qty"/> | <t t-esc="line.name"/></li>
                        </ul>
                        <button class="btn btn-primary pull-right js-next-step" t-att-data-order_id="order.id">In Progress</button>
                    </div>
                </div>
            </t>
        </div>
        <div class="col-xs-4">
            <h3>In Progress</h3>
            <t t-foreach="in_progress" t-as="order">
                <div class="panel panel-info">
                    <div class="panel-heading"><t t-esc="order.name"/></div>
                    <div class="panel-body">
                        <ul t-foreach="order.lines" t-as="line">
                            <li><t t-esc="line.qty"/> | <t t-esc="line.name"/></li>
                        </ul>
                        <button class="btn btn-primary pull-right js-next-step" t-att-data-order_id="order.id">Done</button>
                    </div>
                </div>
            </t>
        </div>
        <div class="col-xs-4">
            <h3>Done</h3>
            <t t-foreach="done" t-as="order">
                <div class="panel panel-default">
                    <div class="panel-heading"><t t-esc="order.name"/></div>
                    <div class="panel-body">
                        <ul t-foreach="order.lines" t-as="line">
                            <li><t t-esc="line.qty"/> | <t t-esc="line.name"/></li>
                        </ul>
                    </div>
                </div>
            </t>
        </div>
    </t>

    <t t-name="pos_kitchen_screen.error">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="btn btn-default navbar-btn" onclick="history.back()">Back</button>
                </div>
            </div>
        </nav>
        <div class="col-xs-12">
            <div class="alert alert-danger" role="alert">
                <h4><t t-esc="error"/></h4>
            </div>
        </div>
    </t>
</templates>
