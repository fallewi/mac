<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_kanban" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="name">pos.config.kanban</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_session_cb']" position="after">
                <button t-if="record.current_session_state.raw_value === 'opened'" class="btn btn-info"
                        name="open_kitchen_screen" type="object">Kitchen Screen</button>
            </xpath>
        </field>
    </record>
</odoo>
