<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_kanban" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="name">pos.config.kanban</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="enable_kitchen_screen"/>
            </field>
            <xpath expr="//button[@name='open_session_cb']" position="after">
                <button t-if="record.current_session_state.raw_value === 'opened' &amp;&amp; record.enable_kitchen_screen.raw_value"
                        class="btn btn-info" name="open_kitchen_screen" type="object">Kitchen Screen</button>
            </xpath>
        </field>
    </record>

    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <div id="category_reference" position="before">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_kitchen_screen"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_kitchen_screen"/>
                        <span class="fa fa-lg fa-cutlery" title="For bars and restaurants"/>
                        <div class="text-muted">
                            Display Orders for Kitchen
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
