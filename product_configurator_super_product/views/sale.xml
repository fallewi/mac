<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_super_config" model="ir.ui.view">
        <field name="name">sale.order.form.super.config</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="product_configurator_wizard.sale_order_form_config"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='reconfigure_product']" position="replace">
                <field name="super_template" invisible="1"/>
                <button name="reconfigure_product" groups="product_configurator.group_product_configurator"
                        help="Reconfigure"
                        icon="fa-cogs"
                        type="object"
                        attrs="{
                            'invisible': [
                                '|',
                                ('state','not in',['draft','sent']),
                                ('config_ok','=',False),
                                ('super_template','=',False)
                            ]}"/>
            </xpath>
        </field>
    </record>
</odoo>