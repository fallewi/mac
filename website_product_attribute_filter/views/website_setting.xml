<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_website_config_settings_filter_group" model="ir.ui.view">
        <field name="name">Website config filter setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages_setting']" position="after">
                <group string="Product Filter Configuration">
					<field name="disable_group_filter" />
					<field name="disable_count_filter" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
